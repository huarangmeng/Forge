<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application>

        <!-- 占坑 Activity：Standard 模式 -->
        <activity
            android:name="com.hrm.forge.internal.hook.StubActivityStandard"
            android:exported="false"
            android:launchMode="standard" />

        <!-- 占坑 Activity：SingleTop 模式 -->
        <activity
            android:name="com.hrm.forge.internal.hook.StubActivitySingleTop"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- 占坑 Activity：SingleTask 模式 -->
        <activity
            android:name="com.hrm.forge.internal.hook.StubActivitySingleTask"
            android:exported="false"
            android:launchMode="singleTask" />

        <!-- 占坑 Activity：SingleInstance 模式 -->
        <activity
            android:name="com.hrm.forge.internal.hook.StubActivitySingleInstance"
            android:exported="false"
            android:launchMode="singleInstance" />

        <!-- 占坑 Service：用于启动未注册的 Service -->
        <service
            android:name="com.hrm.forge.internal.hook.StubService"
            android:exported="false" />

        <!-- 占坑 BroadcastReceiver：用于接收热更新 APK 中新增的静态 Receiver -->
        <receiver
            android:name="com.hrm.forge.internal.hook.StubReceiver"
            android:exported="true">
            <!-- 可以在这里添加常用的系统广播 IntentFilter -->
            <!-- 注意：由于无法动态修改 Manifest，建议使用动态注册 -->
        </receiver>

        <!-- 
        占坑 ContentProvider：用于热更新场景
        
        功能说明：
        1. 在 AndroidManifest 中注册占坑 Authority
        2. ContentProviderHook 会在 ActivityThread.mProviderMap 中添加热更 Provider 的真实 Authority 映射
        3. 映射到此占坑 Provider 的 ProviderClientRecord
        4. 调用方使用真实 Authority 时，系统会找到映射，访问到热更 Provider 实例
        
        注意事项：
        - Authority 固定为 "com.hrm.forge.stub.provider"
        - exported=false 确保安全性
        - 实际业务逻辑在热更新 APK 的 ContentProvider 中实现
        -->
        <provider
            android:name="com.hrm.forge.internal.hook.StubContentProvider"
            android:authorities="com.hrm.forge.stub.provider"
            android:exported="false" />
    </application>
</manifest>